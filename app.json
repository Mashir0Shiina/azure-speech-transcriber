{
  "name": "Azure Speech Transcriber",
  "description": "语音/视频转文字工具，支持多语言界面和Azure语音服务",
  "repository": "https://github.com/Mashir0Shiina/azure-speech-transcriber",
  "logo": "https://www.microsoft.com/favicon.ico",
  "keywords": ["flask", "azure", "speech-to-text", "transcription", "python"],
  "stack": "container",
  "success_url": "/",
  "env": {
    "REDIS_URL": {
      "description": "Redis服务器的URL，用于Celery任务队列",
      "value": "",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    },
    "worker": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "addons": [
    "heroku-redis:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
} 